generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Wpis {
  id         Int         @id @default(autoincrement())
  createdAt  DateTime    @default(now())
  title      String      @db.VarChar(255)
  content    String?
  author     String      @db.VarChar(200)
  category   Kategoria   @relation(fields: [categoryId], references: [id])
  categoryId Int
  komentarze Komentarz[]
}

model Kategoria {
  id       Int    @id @default(autoincrement())
  category String @db.VarChar(200)
  wpis     Wpis[]
}

model Komentarz {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  content   String?
  author    String   @db.VarChar(200)
  wpis      Wpis     @relation(fields: [wpisId], references: [id])
  wpisId    Int
}
